generator client {
  provider = "prisma-client-js"  // Correct provider for Prisma Client
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())  // id field added
  name      String
  email     String   @unique
  dateTaken DateTime @default(now())  // default to current timestamp
  status    Status   @default(Active)  // Correct enum value, Active is the default
}

enum Status {
  Active
  Inactive
  Pending
}
